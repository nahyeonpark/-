import java.util.*;

public class Main {
	static long n;
	static int[] dist;

    public static void main(String[] args) {
        Scanner scan = new Scanner(System.in);
        n = scan.nextLong();
        
        long sum = 0;
        long cnt = 0;
        long i ;
        for(i = 1; ; i++) {
        	sum += i;
        	if(sum > n) {
        		if(sum - n <= i)
        			break;
        	}
        }
        System.out.println(i-1);
        
    }
    
}
